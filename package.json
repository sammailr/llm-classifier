{
  "name": "llm-classifier",
  "version": "1.0.0",
  "description": "Fast LLM-powered website classification system",
  "private": true,
  "workspaces": [
    "api",
    "worker",
    "frontend"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=api",
    "dev:worker": "npm run dev --workspace=worker",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\" \"npm run dev:frontend\"",
    "build": "npm run build --workspaces",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
